<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/exerciseName"
        android:layout_width="280dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Deadlift"
        app:layout_constraintStart_toEndOf="@+id/ivExercise"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivExercise"
        android:layout_width="82dp"
        android:layout_height="83dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/exerciseSetsDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Sets"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseNotes" />

    <TextView
        android:id="@+id/exerciseSets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseSetsDisplay" />

    <TextView
        android:id="@+id/exerciseRepsDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:text="Reps"
        app:layout_constraintStart_toEndOf="@+id/exerciseSetsDisplay"
        app:layout_constraintTop_toBottomOf="@+id/exerciseNotes" />

    <TextView
        android:id="@+id/exerciseReps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="4dp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/exerciseSets"
        app:layout_constraintTop_toBottomOf="@+id/exerciseRepsDisplay" />

    <TextView
        android:id="@+id/exerciseWeightsDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:text="Weights"
        app:layout_constraintStart_toEndOf="@+id/exerciseRepsDisplay"
        app:layout_constraintTop_toBottomOf="@+id/exerciseNotes" />

    <TextView
        android:id="@+id/exerciseWeights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="4dp"
        android:text="135, 185, 225"
        app:layout_constraintStart_toEndOf="@+id/exerciseReps"
        app:layout_constraintTop_toBottomOf="@+id/exerciseWeightsDisplay" />

    <TextView
        android:id="@+id/exerciseNotes"
        android:layout_width="378dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="80-85% 1RM, chest up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivExercise" />

</androidx.constraintlayout.widget.ConstraintLayout>